<% if answer.new_record? %>
  <h3>Preview</h3>
<% end %>

<p>
  <strong>Content:</strong>
  <%= answer.content %>
</p>

<p>
  <strong>Discussion:</strong>
  <%= answer.discussion %>
</p>

<p>
  <strong>Author:</strong>
  <%= answer.author %>
</p>

<% unless answer.new_record? %>
  <%= link_to 'Edit', edit_discussion_answer_path(@discussion, answer) %>
<% end %>
